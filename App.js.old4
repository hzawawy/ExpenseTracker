                    <Text style={styles.receiptDate}>Scanned: {receipt.scanDate}</Text>
                  </View>
                  <View style={styles.receiptBadge}>
                    <Text style={styles.receiptBadgeText}>‚ú® AI Processed</Text>
                  </View>
                </View>
